#!/usr/bin/env node

var yargs = require('yargs')
	.usage('Usage: check <file> [options]')
    .describe('v', 'Verbose flag. Will print statements.')
    .describe('r', 'Recrusive flag. Will recursively check required files.')
    .describe('o', 'Output flag. Will output ast into ASTOutput.js.')
    .describe('j', 'Will output <json class=""></json>')
    .showHelpOnFail(false);

var check   = require('../check.js'),
	colors  = require('colors'),
	fs = require('fs'),
	path = require('path'),
	_ = require('underscore'),
	file = process.argv[2];

if (!file) {
	yargs.showHelp();
	process.exit();
}

file = path.resolve(file);

if (!fs.existsSync(file)) {
	console.error(file, 'doesn\'t exist.');
	process.exit();
} else if (!fs.lstatSync(file).isFile()) {
	console.error(file, 'is not a file.');
	process.exit();
}

var argv = yargs.argv;

if (argv.h) {
	yargs.showHelp();
	process.exit();
}

var sinks = module.exports.sinks = require('../danger.json').sinks;
var sources = module.exports.sources = require('../danger.json').sources;

check.flags.verbose = argv.v;
check.flags.recursive = argv.r;

if (!argv.j)
	console.log(' ---- '.yellow, file.white);

var scope = new check.Scope({
	sources: sources, sinks: sinks,
	file: file
});

var reports = [];


if (argv.j) {
	scope.log = function(type, node, name, value) {
		switch(type) {
			case 'SOURCE':
				this.reports.push({
					source: {
						name: value,
						line: this.file + ':' + check.pos(node)
					}
				});
				break;
			case 'SCES':
				source = _.filter(this.reports, function(i) {return i.source.name == value;})[0];
				if (source) {
					if (!source.chain)
						source.chain = [];
					source.chain.push({
						name: name,
						value: value,
						line: this.file + ':' + check.pos(node)
					})
				}
				// else
				// 	console.log(93, check.pos(node), name, value);
				break;
			case 'SINK':
				source = _.filter(this.reports, function(i) {return i.source.name == value;})[0];
				if (source)
					source.sink = {
						name: name,
						line: this.file + ':' + check.pos(node)
					};
				// else
				// 	console.log(93, check.pos(node), name, value);
				break;
		}
	};

	scope.leaveScope = function() {
		var r = _.filter(this.reports, function(i) {return !!i.sink;});
		// if (r.length !== 0)
		// 	console.log(r);
		reports = reports.concat(r);
	};
}

var ast = check.astFromFile(scope.file, argv.o);
check.traverse(ast, scope);

console.log(JSON.stringify(reports));